<ul class="navbar-nav ml-auto">
    @using System.Security.Claims;
    @if (!User.Identities.Any(u => u.IsAuthenticated))
    {
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
    }
    else
    {
        <li class="nav-item">
            <div class="nav-link">
                Xin chào!
                @User.Identities.First(u => u.IsAuthenticated &&
                                       u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value
            </div>
        </li>
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="LogOut">Thoát</a></li>
    }
</ul>