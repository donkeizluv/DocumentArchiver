@using DocumentArchiver.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Document Archiver</title>
    @*Promise support for IE*@
    <script src="https://cdn.polyfill.io/v2/polyfill.min.js"></script>
    <link rel="stylesheet" href="~/lib/fa/fontawesome-all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script asp-src-include="~/dist/Shared_*.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><span class="env">@EnviromentHelper.EnvStr</span> Document Archiver</a>
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                @*<li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>*@
            </ul>
            @Html.Partial("_LoginNav")
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>
    @*toggle no footer*@
    @if (ViewBag.NoFooter != true)
    {
        <hr />
        <div class="panel-footer text-center container-fluid">
            <span>HD SAISON - @DateTime.Now.Year</span>
        </div>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
